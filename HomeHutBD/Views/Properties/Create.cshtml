@model HomeHutBD.Models.Properties
@{
    ViewData["Title"] = "List Your Property";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-home me-2"></i>List Your Property</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Title" class="form-label">Property Title*</label>
                                <input asp-for="Title" class="form-control" placeholder="e.g. Spacious 3 Bedroom Apartment in Gulshan" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Type" class="form-label">Property Type*</label>
                                <select asp-for="Type" class="form-select">
                                    <option value="">Select Type</option>
                                    <option value="Apartment">Apartment</option>
                                    <option value="Duplex">Duplex</option>
                                    <option value="Building">Building</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Purpose" class="form-label">Purpose*</label>
                                <select asp-for="Purpose" class="form-select">
                                    <option value="">Select Purpose</option>
                                    <option value="Rent">For Rent</option>
                                    <option value="Buy">For Sale</option>
                                </select>
                                <span asp-validation-for="Purpose" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Address" class="form-label">Address*</label>
                                <input asp-for="Address" class="form-control" placeholder="Full property address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Bedrooms" class="form-label">Bedrooms</label>
                                <input asp-for="Bedrooms" class="form-control" type="number" min="0" />
                                <span asp-validation-for="Bedrooms" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Bathrooms" class="form-label">Bathrooms</label>
                                <input asp-for="Bathrooms" class="form-control" type="number" min="0" />
                                <span asp-validation-for="Bathrooms" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="AreaSqft" class="form-label">Area (sqft)</label>
                                <input asp-for="AreaSqft" class="form-control" type="number" min="0" />
                                <span asp-validation-for="AreaSqft" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label">Price* (৳)</label>
                                <input asp-for="Price" class="form-control" type="number" min="0" placeholder="Price in BDT" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Property Image (URL)</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="Image URL" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- We need to add a verification ID but since it's a required field,
                             we're adding a hidden input with a default value. In a real app,
                             this would be handled properly with verification system -->
                        <input type="hidden" asp-for="VerificationId" value="1" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Submit Property
                            </button>
                            <a asp-action="Browse" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}