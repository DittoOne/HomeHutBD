@{
    bool isSignedIn = Context.Session.GetInt32("UserId").HasValue;
    string username = Context.Session.GetString("Username");
}

<ul class="navbar-nav ms-auto">
    @if (isSignedIn)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle me-1"></i> Hello, @username!
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")"><i class="fas fa-user me-2"></i>My Profile</a></li>
                <li><a class="dropdown-item" href="@Url.Action("MyProperties", "Properties")"><i class="fas fa-home me-2"></i>My Properties</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Index", "Chat")"><i class="fas fa-comments me-2"></i>My Chats</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="@Url.Action("LogoutGet", "Account")"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary me-2"><i class="fas fa-sign-in-alt"></i> Login</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary"><i class="fas fa-user-plus"></i> Register</a>
        </li>
    }
</ul>